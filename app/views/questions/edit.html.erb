<h1>Edit Question</h1>

<div class="row">
  <%= form_for @question do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter Question Title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', placeholder: "Enter Question Body" %>
    </div>
    <div class="form-group">
      <%= f.label :resolved %>
      <%= f.check_box :resolved %>
    </div>
    <div class="form-group">
      <%= f.submit "Save" %>
    </div>  
  <% end %>
</div>
