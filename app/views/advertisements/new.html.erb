<h1>New Advertisement</h1>

<div class="row">
  <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter Title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', placeholder: "Enter Body" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control', placeholder: "Enter Price" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save" %>
    </div>
  <% end %>
</div>